{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "rootDir": "./",
    "jsx": "react",
    "lib": [ "es6","dom"],
    "paths": {
      "*": [
        "*"
      ],
      "~/*": [
        "src/*"
      ],
      "~@/*": [
        "src/components/*"
      ]
    },
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "public"]
}
